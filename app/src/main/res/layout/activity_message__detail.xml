<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titledetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->


    <!--android:layout_alignParentRight="true"-->

    <TextView
        android:id="@+id/bodydetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titledetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:layout_weight="6"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/statedetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bodydetail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titledetail2"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_weight="0.5"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/Critical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:textSize="16sp" />

</RelativeLayout>
